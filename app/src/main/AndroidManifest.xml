<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="reading.speed.improver">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light">
        <activity
                android:name=".user.teacher.PupilStatisticsActivity"
                android:label="Статистика"
                android:parentActivityName=".user.pupil.management.PupilsManagementActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="reading.speed.improver.user.pupil.management.PupilsManagementActivity"/>
        </activity>
        <activity
                android:name=".user.pupil.statistic.PupilStatisticsActivity"
                android:label="Статистика"
                android:parentActivityName=".user.pupil.PupilMainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="reading.speed.improver.user.pupil.PupilMainActivity"/>
        </activity>
        <activity
                android:name=".exercises.schulte.table.ui.SchulteExerciseActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/FunkyKidsStyle">
        </activity>
        <activity
                android:name=".exercises.word.searching.ui.WordSearchingExerciseActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/FunkyKidsStyle">
        </activity>
        <activity
                android:name=".exercises.text.appearance.emerging.ui.EmergingTextExerciseActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/FunkyKidsStyle">
        </activity>
        <activity
                android:name=".exercises.text.appearance.fading.ui.FadingTextExerciseActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/FunkyKidsStyle">
        </activity>
        <activity
                android:name=".exercises.text.spaceless.ui.SpacelessTextExerciseActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/FunkyKidsStyle">
        </activity>
        <activity
                android:name=".exercises.text.misplaced.spaces.ui.MisplacedSpacesExerciseActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/FunkyKidsStyle">
        </activity>
        <activity
                android:name=".exercises.word.appearance.ui.EmergingWordsExerciseActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:theme="@style/FunkyKidsStyle">
        </activity>
        <activity android:name=".Chitaloid"
                  android:theme="@style/FunkyKidsStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".user.teacher.TeacherMainActivity"
                android:label="Окно учителя"
                android:parentActivityName=".Chitaloid">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="reading.speed.improver.Chitaloid"/>
        </activity>
        <activity
                android:name=".auth.signin.SignInActivity"
                android:label="Выбор учетной записи"
                android:parentActivityName=".Chitaloid"
                android:theme="@style/FunkyKidsStyle">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="reading.speed.improver.Chitaloid"/>
        </activity>
        <activity
                android:name=".auth.signup.SignUpActivity"
                android:label="Создание учетной записи"
                android:parentActivityName=".Chitaloid"
                android:theme="@style/FunkyKidsStyle">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="reading.speed.improver.Chitaloid"/>
        </activity>
        <activity android:name=".user.pupil.PupilMainActivity"
                  android:theme="@style/FunkyKidsStyle"/>
        <activity
                android:name=".user.pupil.management.PupilsManagementActivity"
                android:label="Управление аккаунтами"
                android:parentActivityName=".user.teacher.TeacherMainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="reading.speed.improver.user.teacher.TeacherMainActivity"/>
        </activity>
        <activity
                android:name=".user.pupil.exercise.selection.ExerciseSelectionActivity"
                android:label="Выбор упражнения"
                android:parentActivityName=".user.pupil.PupilMainActivity"
                android:theme="@style/FunkyKidsStyle">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="reading.speed.improver.user.pupil.PupilMainActivity"/>
        </activity>
    </application>

</manifest>