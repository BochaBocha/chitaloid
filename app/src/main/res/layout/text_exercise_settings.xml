<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="10dp"
              android:keepScreenOn="false"
              android:layout_height="wrap_content" android:layout_width="wrap_content">
    <TextView
            android:text="@string/exercise_settings_title"
            android:paddingBottom="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/settings_label"
            android:gravity="center"
            android:textSize="18sp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/font_size_selected"
                    android:gravity="center"
            />
            <SeekBar
                    style="@android:style/Widget.DeviceDefault.SeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:max="10"
                    android:progress="3"
                    android:id="@+id/seekBar_font_size"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="@string/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_ok"/>
</LinearLayout>
