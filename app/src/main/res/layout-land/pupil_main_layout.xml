<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:paddingTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/linearLayout5" android:gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="17dp" android:id="@+id/pupil_welcome_textView"
                android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="336dp" android:layout_marginRight="336dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="336dp"
                android:layout_marginStart="336dp"/>
        <ImageView
                android:layout_width="183dp"
                android:layout_height="129dp" app:srcCompat="@drawable/robot_4_head" android:id="@+id/imageView3"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pupil_welcome_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                app:layout_constraintHorizontal_bias="0.53" android:layout_marginLeft="270dp"
                android:layout_marginStart="270dp" android:layout_marginEnd="270dp" android:layout_marginRight="270dp"
        />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:id="@+id/linearLayout4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        >
            <Button
                    android:text="@string/exercise_selection_title"
                    android:background="@drawable/oval_button_green"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" android:id="@+id/exercise_selection_btn"
                    android:layout_width="match_parent"/>
            <Button
                    android:text="@string/pupil_statistic_title"
                    android:background="@drawable/oval_button_yellow"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" android:id="@+id/statistic_btn"/>
            <Button
                    android:text="@string/quit_pupil_title"
                    android:background="@drawable/oval_button_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/quit_btn"
            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>